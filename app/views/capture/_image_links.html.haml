- if capture
  %ul
    - if capture.fullsize
      %li
        %a{:href => capture.fullsize.sub(Rails.root.join('public').to_s, ''), :target => '_blank'} 
          Original
          = '[' + number_to_human_size(File.size(capture.fullsize), :precision => 0) + ']'
    - capture.capture_derivatives.each do |deriv|
      %li
        %a{:href => deriv.filename.sub(Rails.root.join('public').to_s, ''), :target => '_blank'} 
          = deriv.comment
          = '[' + number_to_human_size(File.size(deriv.filename), :precision => 0) + ']'

